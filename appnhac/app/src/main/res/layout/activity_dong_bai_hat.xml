<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_album"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="10dp"
    tools:context=".Activity.DongBaiHatActivity">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_tenbaihat"
                android:maxWidth="280dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="2"
                android:textColor="#000000"
                android:textSize="19sp"
                android:textStyle="bold"
                android:text="lá xa lìa cành"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_tron"
                android:id="@+id/image_anhbaihat"
                android:src="@drawable/logo"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_tencasibaihat"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:textColor="#000000"
            android:textSize="19sp"
            android:textStyle="bold"
            android:text="lá xa lìa cành"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/btn_edit_baihat"
                android:src="@drawable/ic_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/btn_remove_baihat"
                android:src="@drawable/ic_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>