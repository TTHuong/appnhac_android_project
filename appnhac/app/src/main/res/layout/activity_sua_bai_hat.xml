<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context=".Activity.SuaBaiHatActivity">

    <TextView
        android:gravity="center"
        android:textColor="#ff0000"
        android:layout_margin="5dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="cập nhật bài hát"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/button_activity_sua_bai_hat_tro_ve"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Trở về"
        android:background="@drawable/border_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <TextView
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="tên bài hát"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:inputType="text"
        android:id="@+id/text_suatenbaihat"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:maxLines="1"
        android:hint="tên bài hát"
        android:background="@drawable/border_radius"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <TextView
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Hình bài hát"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:inputType="text"
        android:id="@+id/text_suahinhbaihat"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:maxLines="1"
        android:hint="đường dẫn hình bài hát"
        android:background="@drawable/border_radius"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <ImageView
        android:id="@+id/image_suahinhbaihat"
        android:layout_width="match_parent"
        android:layout_height="90dp"/>
    <TextView
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="ca sĩ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:inputType="text"
        android:id="@+id/text_suacasi"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:maxLines="1"
        android:hint="ca sĩ"
        android:background="@drawable/border_radius"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <TextView
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="link bài hát"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:inputType="text"
        android:id="@+id/text_sualinkbaihat"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:maxLines="1"
        android:hint="link bài hát"
        android:background="@drawable/border_radius"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button_activity_sua_bai_hat_update"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Lưu"
        android:background="@drawable/border_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>